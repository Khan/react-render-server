{
  "name": "react-render-server",
  "version": "0.4.0",
  "description": "A node.js server for server-side rendering Khan Academy react components.",
  "main": "src/main.js",
  "scripts": {
    "start": "ulimit -n 999999 || ulimit -n 2048; node src/main.js -p 8080 --log-level=debug",
    "dev": "nodemon -i src/render_cache src/main.js -- --dev",
    "debug": "nodemon -i src/render_cache src/main.js -- --dev --log-level=debug",
    "profile": "node-debug -p 8040 --no-preload src/main.js --dev",
    "serve_local": "nodemon -i src/render_cache src/main.js -- --dev",
    "test": "NODE_ENV=test mocha --exit --reporter spec 'src/*_test.js'",
    "deploy": "./deploy.sh",
    "deploy:docker": "DOCKER=1 ./deploy.sh",
    "set_default": "./set_default.sh",
    "lint": "eslint --config ./eslint/eslintrc src",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Khan/react-render-server.git"
  },
  "author": "Jamie Wong <jamie.wong@khanacademy.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Khan/react-render-server/issues"
  },
  "homepage": "https://github.com/Khan/react-render-server#readme",
  "dependencies": {
    "@google-cloud/debug-agent": "^4.0.3",
    "@google-cloud/logging-winston": "^2.0.1",
    "@google-cloud/profiler": "^2.0.2",
    "@google-cloud/trace-agent": "^4.1.1",
    "apollo-cache-inmemory": "1.3.0",
    "apollo-client": "2.2.7",
    "apollo-link-http": "1.5.3",
    "argparse": "^1.0.3",
    "body-parser": "^1.18.3",
    "express": "^4.17.1",
    "express-winston": "^3.3.0",
    "graphql": "14.1.1",
    "graphql-tag": "2.8.0",
    "jsdom": "^15.1.1",
    "node-fetch": "1.7.3",
    "nodemon": "^1.18.7",
    "superagent": "^4.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.6",
    "sinon": "^7.2.2",
    "supertest": "^3.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "engines": {
    "node": ">=8"
  },
  "pre-commit": [
    "lint",
    "test",
    "pretty-quick"
  ]
}
